<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane minHeight="0.0" minWidth="0.0" prefWidth="200.0" style="-fx-padding: 0;" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sep.fimball.view.window.pinballmachine.editor.SelectedElementSubView">
    <children>
        <ScrollPane prefWidth="200.0" vbarPolicy="ALWAYS" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                    AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <content>
                <AnchorPane>
                    <children>
                        <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="4.0" AnchorPane.rightAnchor="4.0"
                              AnchorPane.topAnchor="4.0">
                            <children>
                                <GridPane>
                                    <children>
                                        <Label text="Name: " GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                                        <Label fx:id="nameLabel" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                                        <Label text="Description: " GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                                        <Label fx:id="descriptionLabel" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                                        <Label text="Strength: 3" fx:id="strengthLabel" GridPane.columnIndex="0"
                                               GridPane.rowIndex="2"/>
                                        <Slider blockIncrement="0.5" max="5.0" min="1.0" value="3.0"
                                                fx:id="strengthSlider" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                                        <Label text="Points: 500" fx:id="pointsLabel" GridPane.columnIndex="0"
                                               GridPane.rowIndex="3"/>
                                        <Slider blockIncrement="1" max="50" min="1" value="500.0" fx:id="pointsSlider"
                                                GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                                    </children>
                                    <columnConstraints>
                                        <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
                                        <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                </GridPane>
                            </children>
                        </VBox>
                    </children>
                </AnchorPane>
            </content>
        </ScrollPane>
        <Button mnemonicParsing="false" text="Rotate" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0"
                onMouseClicked="#rotateClicked"/>
        <Button mnemonicParsing="false" text="Dublicate" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="100.0"
                onMouseClicked="#dublicateClicked"/>
        <Button mnemonicParsing="false" text="Remove" AnchorPane.bottomAnchor="10.0" AnchorPane.rightAnchor="25.0"
                onMouseClicked="#removeClicked"/>
    </children>
</AnchorPane>