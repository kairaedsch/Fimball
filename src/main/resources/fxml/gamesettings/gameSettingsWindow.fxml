<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<TitledPane fx:id="title" animated="false" collapsible="false" maxHeight="-Infinity" maxWidth="-Infinity"
            minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" text="!gamesettings.key!" xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sep.fimball.view.dialog.gamesettings.GameSettingsView">
    <opaqueInsets>
        <Insets/>
    </opaqueInsets>
    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0" style="-fx-padding: 0;">
        <TabPane prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE"
                 AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                 AnchorPane.topAnchor="0.0">
            <Tab fx:id="general" closable="false" text="!gamesettings.general.key!">
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                    <ScrollPane fitToHeight="true" fitToWidth="true" vbarPolicy="ALWAYS"
                                AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0"
                                AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                        <AnchorPane>
                            <VBox prefHeight="200.0" prefWidth="100.0"
                                  AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="10.0"
                                  AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                                <Label fx:id="languageLabel"
                                       text="!gamesettings.general.language.key!">
                                    <font>
                                        <Font name="System Bold" size="14.0"/>
                                    </font>
                                </Label>
                                <GridPane>
                                    <columnConstraints>
                                        <ColumnConstraints minWidth="10.0"
                                                           prefWidth="100.0"/>
                                        <ColumnConstraints hgrow="SOMETIMES"
                                                           minWidth="10.0"
                                                           prefWidth="100.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0"
                                                        prefHeight="30.0"
                                                        vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <Label fx:id="select"
                                           text="!gamesettings.general.language.select.key!"/>
                                    <ComboBox fx:id="language" prefWidth="150.0"
                                              GridPane.columnIndex="1"/>
                                </GridPane>
                                <Label fx:id="keybindingLabel"
                                       text="!gamesettings.general.keybinding.key!">
                                    <font>
                                        <Font name="System Bold" size="14.0"/>
                                    </font>
                                    <VBox.margin>
                                        <Insets top="10.0"/>
                                    </VBox.margin>
                                </Label>
                                <VBox fx:id="keyBinding">
                                </VBox>
                                <Label fx:id="displayLabel"
                                       text="!gamesettings.general.display.key!">
                                    <font>
                                        <Font name="System Bold" size="14.0"/>
                                    </font>
                                    <VBox.margin>
                                        <Insets top="10.0"/>
                                    </VBox.margin>
                                </Label>
                                <GridPane>
                                    <columnConstraints>
                                        <ColumnConstraints minWidth="10.0"
                                                           prefWidth="100.0"/>
                                        <ColumnConstraints fillWidth="false"
                                                           hgrow="SOMETIMES"
                                                           minWidth="10.0"
                                                           prefWidth="100.0"/>
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="10.0"
                                                        prefHeight="30.0"
                                                        vgrow="SOMETIMES"/>
                                    </rowConstraints>
                                    <Label fx:id="fullscreenLabel"
                                           text="!gamesettings.general.display.fullscreen.key!"/>
                                    <CheckBox fx:id="fullscreen"
                                              mnemonicParsing="false"
                                              GridPane.columnIndex="1"
                                              text="§gamesettings.general.display.fullscreen.tip.key§">
                                        <tooltip>
                                            <Tooltip fx:id="fullscreenTip"
                                                     text="!gamesettings.general.display.fullscreen.tip.key!"/>
                                        </tooltip>
                                    </CheckBox>
                                </GridPane>
                            </VBox>
                        </AnchorPane>
                    </ScrollPane>
                </AnchorPane>
            </Tab>
            <Tab fx:id="audio" closable="false" text="!gamesettings.audio.key!">
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                    <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0"
                          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="10.0"
                          AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="10.0">
                        <Label fx:id="volumeLabel" text="!gamesettings.audio.volume.key!">
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
                                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0"
                                                   prefWidth="100.0"/>
                                <ColumnConstraints minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0"
                                                vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0"
                                                vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0"
                                                vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <Slider fx:id="masterVolumeSlider" blockIncrement="1.0"
                                    value="50.0" GridPane.columnIndex="1">
                                <tooltip>
                                    <Tooltip fx:id="masterTip"
                                             text="!gamesettings.audio.volume.master.tip.key!"/>
                                </tooltip>
                            </Slider>
                            <Label fx:id="sfxVolumeLabel"
                                   text="!gamesettings.audio.volume.sfx.key!"
                                   GridPane.rowIndex="2"/>
                            <Label fx:id="musicVolumePercent" text="50%"
                                   GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                            <Slider fx:id="musicVolumeSlider" blockIncrement="1.0"
                                    value="50.0" GridPane.columnIndex="1"
                                    GridPane.rowIndex="1">
                                <tooltip>
                                    <Tooltip fx:id="musicTip"
                                             text="!gamesettings.audio.volume.music.tip.key!"/>
                                </tooltip>
                            </Slider>
                            <Label fx:id="musicVolumeLabel"
                                   text="!gamesettings.audio.volume.music.key!"
                                   GridPane.rowIndex="1"/>
                            <Label fx:id="masterVolumeLabel"
                                   text="!gamesettings.audio.volume.master.key!"/>
                            <Slider fx:id="sfxVolumeSlider" blockIncrement="1.0"
                                    value="50.0" GridPane.columnIndex="1"
                                    GridPane.rowIndex="2">
                                <tooltip>
                                    <Tooltip fx:id="sfxTip"
                                             text="!gamesettings.audio.volume.sfx.tip.key!"/>
                                </tooltip>
                            </Slider>
                            <Label fx:id="sfxVolumePercent" text="50%"
                                   GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                            <Label fx:id="masterVolumePercent" text="50%"
                                   GridPane.columnIndex="2"/>
                        </GridPane>
                    </VBox>
                </AnchorPane>
            </Tab>
        </TabPane>
        <Button fx:id="okButton" defaultButton="true" mnemonicParsing="false" onAction="#okClicked"
                text="!gamesettings.continue.key!" AnchorPane.bottomAnchor="10.0"
                AnchorPane.rightAnchor="25.0"/>
    </AnchorPane>
</TitledPane>
