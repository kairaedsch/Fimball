<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<TitledPane fx:id="key_0" animated="false" collapsible="false" prefHeight="575.0" maxWidth="800.0" stylesheets="@../../styles/style.css" text="!gamesettings.key!"
            xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sep.fimball.view.dialog.gamesettings.GameSettingsView">
    <content>
        <GridPane AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" styleClass="dialogBackground">
            <columnConstraints>
                <ColumnConstraints hgrow="ALWAYS" prefWidth="10"/>
                <ColumnConstraints hgrow="ALWAYS" prefWidth="10"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints vgrow="ALWAYS"/>
                <RowConstraints vgrow="NEVER"/>
            </rowConstraints>
            <children>
                <VBox>
                    <children>
                        <Label fx:id="key_2" text="!gamesettings.general.language.key!" styleClass="settingsMenuTitle"/>
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints maxWidth="120.0" minWidth="120.0" prefWidth="120.0"/>
                                <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Label fx:id="key_3" text="!gamesettings.general.language.select.key!"/>
                                <ComboBox fx:id="language" maxWidth="120.0" minWidth="120.0" prefWidth="120.0" styleClass="dialogButton" GridPane.columnIndex="1"/>

                                <Label fx:id="key_5" text="!gamesettings.general.display.key!" styleClass="settingsMenuTitle" GridPane.rowIndex="1"/>
                                <Label fx:id="key_6" text="!gamesettings.general.display.fullscreen.key!" GridPane.rowIndex="2"/>
                                <CheckBox fx:id="fullscreen" mnemonicParsing="false" text="§gamesettings.general.display.fullscreen.tip.key§" GridPane.rowIndex="2" GridPane.columnIndex="1">
                                    <tooltip>
                                        <Tooltip fx:id="key_7" text="!gamesettings.general.display.fullscreen.tip.key!"/>
                                    </tooltip>
                                </CheckBox>
                            </children>
                        </GridPane>
                        <Label fx:id="key_9" text="!gamesettings.audio.volume.key!" styleClass="settingsMenuTitle"/>
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints prefWidth="120.0"/>
                                <ColumnConstraints hgrow="ALWAYS" prefWidth="100.0"/>
                                <ColumnConstraints prefWidth="120.0"/>
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                            </rowConstraints>
                            <children>
                                <Slider fx:id="masterVolumeSlider" blockIncrement="1.0" value="50.0" GridPane.columnIndex="1">
                                    <tooltip>
                                        <Tooltip fx:id="key_10" text="!gamesettings.audio.volume.master.tip.key!"/>
                                    </tooltip>
                                </Slider>
                                <Label fx:id="key_11" text="!gamesettings.audio.volume.sfx.key!" GridPane.rowIndex="2"/>
                                <Label fx:id="musicVolumePercent" text="50%" GridPane.columnIndex="2" GridPane.rowIndex="1"/>
                                <Slider fx:id="musicVolumeSlider" blockIncrement="1.0" value="50.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                    <tooltip>
                                        <Tooltip fx:id="key_13" text="!gamesettings.audio.volume.music.tip.key!"/>
                                    </tooltip>
                                </Slider>
                                <Label fx:id="key_14" text="!gamesettings.audio.volume.music.key!" GridPane.rowIndex="1"/>
                                <Label fx:id="key_15" text="!gamesettings.audio.volume.master.key!"/>
                                <Slider fx:id="sfxVolumeSlider" blockIncrement="1.0" value="50.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                                    <tooltip>
                                        <Tooltip text="!gamesettings.audio.volume.sfx.tip.key!"/>
                                    </tooltip>
                                </Slider>
                                <Label fx:id="sfxVolumePercent" text="50%" GridPane.columnIndex="2" GridPane.rowIndex="2"/>
                                <Label fx:id="masterVolumePercent" text="50%" GridPane.columnIndex="2"/>
                            </children>
                        </GridPane>
                    </children>
                </VBox>
                <VBox GridPane.columnIndex="1">
                    <children>
                        <Label fx:id="key_4" text="!gamesettings.general.keybinding.key!" styleClass="settingsMenuTitle"/>
                        <VBox fx:id="keyBinding">
                            <VBox.margin>
                                <Insets top="8.0"/>
                            </VBox.margin>
                        </VBox>
                    </children>
                </VBox>
                <Button fx:id="key_16" defaultButton="true" mnemonicParsing="false" onAction="#okClicked" styleClass="dialogButton" text="!gamesettings.continue.key!" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
            </children>
        </GridPane>
    </content>
</TitledPane>
