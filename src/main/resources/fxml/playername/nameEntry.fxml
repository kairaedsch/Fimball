<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>

<GridPane hgap="10.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sep.fimball.view.dialog.playername.PlayerNameEntrySubView">
    <columnConstraints>
        <ColumnConstraints minWidth="10.0" prefWidth="150.0" />
        <ColumnConstraints minWidth="10.0" prefWidth="100.0" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
    </rowConstraints>
    <children>
        <TextField fx:id="nameTextField" text="Player" GridPane.columnIndex="0" GridPane.rowIndex="0" />
        <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#deleteClicked" text="X" GridPane.columnIndex="1" GridPane.rowIndex="0">
         <tooltip>
            <Tooltip fx:id="deleteButtonTip" text="!playername.remove.tip.key!" />
         </tooltip></Button>
    </children>
</GridPane>
